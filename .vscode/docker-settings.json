{
    "name": "Docker Development Settings",
    "description": "Docker-specific configuration for Anyka AK3918 cross-compilation",
    "version": "1.0.0",

    "docker": {
        "image": "anyka-cross-compile",
        "workspace": "/workspace",
        "mounts": [
            {
                "source": "${workspaceFolder}",
                "target": "/workspace",
                "type": "bind"
            }
        ],
        "environment": {
            "BUILD_TYPE": "debug",
            "LOG_LEVEL": "DEBUG",
            "ANYKA_PLATFORM": "1"
        },
        "ports": [],
        "volumes": [],
        "networks": []
    },

    "build": {
        "defaultTask": "docker-build-debug",
        "tasks": {
            "debug": {
                "command": "make debug",
                "args": [],
                "cwd": "/workspace/onvif",
                "environment": {
                    "BUILD_TYPE": "debug",
                    "LOG_LEVEL": "DEBUG"
                }
            },
            "release": {
                "command": "make release",
                "args": [],
                "cwd": "/workspace/onvif",
                "environment": {
                    "BUILD_TYPE": "release",
                    "LOG_LEVEL": "INFO"
                }
            },
            "clean": {
                "command": "make clean",
                "args": [],
                "cwd": "/workspace/onvif"
            },
            "docs": {
                "command": "make docs",
                "args": [],
                "cwd": "/workspace/onvif"
            },
            "test": {
                "command": "make test",
                "args": [],
                "cwd": "/workspace/onvif"
            },
            "static-analysis": {
                "command": "make static-analysis",
                "args": [],
                "cwd": "/workspace/onvif"
            }
        }
    },

    "intellisense": {
        "compilerPath": "/opt/arm-anykav200-crosstool/usr/bin/arm-anykav200-linux-uclibcgnueabi-gcc",
        "cStandard": "c99",
        "cppStandard": "c++11",
        "intelliSenseMode": "gcc-arm",
        "includePath": [
            "/workspace/onvif/include",
            "/workspace/onvif/src",
            "/workspace/anyka_reference/component",
            "/workspace/anyka_reference/platform",
            "/workspace/anyka_reference/akipc/include",
            "/opt/arm-anykav200-crosstool/usr/arm-anykav200-linux-uclibcgnueabi/include",
            "/opt/arm-anykav200-crosstool/usr/arm-anykav200-linux-uclibcgnueabi/sysroot/usr/include"
        ],
        "defines": [
            "ANYKA_PLATFORM=1",
            "_POSIX_C_SOURCE=199309L",
            "PLATFORM_LOG_LEVEL_INFO=3",
            "DEBUG_BUILD"
        ],
        "compilerArgs": [
            "-std=c99",
            "-D_POSIX_C_SOURCE=199309L",
            "-DANYKA_PLATFORM=1",
            "-fno-builtin",
            "-fno-stack-protector",
            "-Wl,--hash-style=sysv",
            "-g",
            "-O0",
            "-DDEBUG_BUILD"
        ]
    },

    "debugging": {
        "program": "/workspace/onvif/out/onvifd_debug",
        "args": ["--debug", "--log-level=DEBUG"],
        "cwd": "/workspace/onvif",
        "environment": {
            "LOG_LEVEL": "DEBUG",
            "BUILD_TYPE": "debug",
            "ANYKA_PLATFORM": "1"
        },
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
            "-enable-pretty-printing",
            "-gdb-set disassembly-flavor intel"
        ]
    }
}
