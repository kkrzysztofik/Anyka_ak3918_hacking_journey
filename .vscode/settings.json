{
  "files.associations": {
    "system_error": "cpp",
    "fstream": "cpp",
    "*.h": "c",
    "*.c": "c",
    "*.cpp": "cpp",
    "*.hpp": "cpp"
  },
  "C_Cpp.default.configurationProvider": "ms-vscode.cmake-tools",
  "C_Cpp.default.intelliSenseMode": "clang-x64",
  "C_Cpp.default.compilerPath": "C:/Program Files/LLVM/bin/clang.exe",
  "C_Cpp.default.cStandard": "c99",
  "C_Cpp.default.cppStandard": "c++11",
  "C_Cpp.default.includePath": [
    "${workspaceFolder}/cross-compile/onvif/include",
    "${workspaceFolder}/cross-compile/onvif/src",
    "${workspaceFolder}/cross-compile/anyka_reference/component",
    "${workspaceFolder}/cross-compile/anyka_reference/platform",
    "${workspaceFolder}/cross-compile/anyka_reference/akipc/include",
    "${workspaceFolder}/cross-compile/anyka_reference/component/include",
    "${workspaceFolder}/cross-compile/anyka_reference/platform/include",
    "C:/Program Files/LLVM/include",
    "C:/Program Files/LLVM/lib/clang/*/include"
  ],
  "C_Cpp.default.defines": [
    "ANYKA_PLATFORM=1",
    "_POSIX_C_SOURCE=199309L",
    "PLATFORM_LOG_LEVEL_INFO=3",
    "DEBUG_BUILD",
    "_WIN32",
    "_MSC_VER=1900"
  ],
  "C_Cpp.default.compilerArgs": [
    "-std=c99",
    "-D_POSIX_C_SOURCE=199309L",
    "-DANYKA_PLATFORM=1",
    "-D_WIN32",
    "-D_MSC_VER=1900",
    "-g",
    "-O0",
    "-DDEBUG_BUILD",
    "-Wall",
    "-Wextra",
    "-Wpedantic"
  ],
  // Editor settings
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.semanticHighlighting.enabled": true,
  // File settings
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.watcherExclude": {
    "**/cross-compile/onvif/out/**": true,
    "**/cross-compile/onvif/docs/**": true,
    "**/.vscode/browse.vc.db*": true,
    "**/node_modules/**": true
  },
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.profiles.windows": {
    "PowerShell": {
      "source": "PowerShell",
      "icon": "terminal-powershell"
    }
  },
  // Build and task settings
  "task.autoDetect": "on",
  "task.showDecorations": true,
  "task.quickOpen.history": 10,
  "task.quickOpen.detail": true,
  "task.quickOpen.skip": false,
  // Clangd settings for WSL2 - OPTIMIZED FOR CURSOR PROBLEMS PANE
  "clangd.path": "/usr/bin/clangd",
  "clangd.arguments": [
    "--compile-commands-dir=${workspaceFolder}/cross-compile/onvif",
    "--header-insertion=never",
    "--completion-style=detailed",
    "--function-arg-placeholders=false",
    "--fallback-style=Google",
    "--background-index",
    "--clang-tidy",
    "--log=verbose",
    "--pretty"
  ],
  "clangd.checkUpdates": true,
  "clangd.trace": "verbose",
  // Language server settings
  "clangd.onConfigChanged": "restart",
  // Problems pane settings
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,
  "problems.sortOrder": "severity",
  "problems.autoReveal": true,
  // Language-specific settings
  "[c]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.semanticHighlighting.enabled": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false
  },
  "[cpp]": {
    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd",
    "editor.semanticHighlighting.enabled": true,
    "editor.suggest.snippetsPreventQuickSuggestions": false
  }
}
