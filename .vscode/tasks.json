{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "docker-build-debug",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "${workspaceFolder}:/workspace",
        "-e",
        "BUILD_TYPE=debug",
        "-e",
        "LOG_LEVEL=DEBUG",
        "anyka-cross-compile",
        "make",
        "-C",
        "/workspace/onvif",
        "debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "docker-build-release",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
