      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cross-compile/onvif",
        "compile-commands"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
