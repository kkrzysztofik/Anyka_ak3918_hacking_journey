        "-e",
        "LOG_LEVEL=INFO",
        "anyka-cross-compile",
        "make",
        "-C",
        "/workspace/onvif",
        "release"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
