{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-debug",
      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cross-compile/onvif",
        "debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "build-release",
      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cross-compile/onvif",
        "release"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        "$msCompile"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cross-compile/onvif",
        "clean"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "docs",
      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cross-compile/onvif",
        "docs"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "test",
      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cross-compile/onvif",
        "test"
      ],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "copy-to-sd",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "cp ${workspaceFolder}/cross-compile/onvif/out/onvifd ${workspaceFolder}/SD_card_contents/anyka_hack/usr/bin/ && echo 'Binary copied to SD card payload'"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "build-debug"
    },
    {
      "label": "generate-compile-commands",
      "type": "shell",
      "command": "make",
      "args": [
        "-C",
        "${workspaceFolder}/cross-compile/onvif",
