    {
      "label": "docker-shell",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-it",
        "-v",
        "${workspaceFolder}:/workspace",
        "anyka-cross-compile",
        "/bin/bash"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new",
        "showReuseMessage": false,
        "clear": true
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "docker-verify-build",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "${workspaceFolder}:/workspace",
        "anyka-cross-compile",
        "bash",
        "-c",
        "cd /workspace/onvif && make clean && make debug && echo 'Build verification successful'"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "label": "docker-copy-to-sd",
      "type": "shell",
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-v",
        "${workspaceFolder}:/workspace",
        "anyka-cross-compile",
        "bash",
        "-c",
        "cd /workspace && cp onvif/out/onvifd SD_card_contents/anyka_hack/usr/bin/ && echo 'Binary copied to SD card payload'"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "dependsOn": "docker-build-debug"
    },
    {
      "label": "docker-ftp-upload",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        ".\\docker-helper.ps1",
        "ftp-upload"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
