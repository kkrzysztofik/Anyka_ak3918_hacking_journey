{
  "name": "Device Upload Configuration",
  "description": "Configuration for uploading binaries to Anyka AK3918 devices via SCP/SFTP",
  "version": "1.0.0",
  "defaults": {
    "deviceIP": "192.168.1.100",
    "username": "root",
    "password": "123456",
    "remotePath": "/tmp",
    "binaryName": "onvifd",
    "timeout": 10000
  },
  "devices": [
    {
      "name": "Default Device",
      "ip": "192.168.1.100",
      "username": "root",
      "password": "123456",
      "description": "Default Anyka AK3918 device"
    }
  ],
  "uploadPaths": {
    "temporary": "/tmp",
    "system": "/usr/bin",
    "custom": "/opt/onvif"
  },
  "postUploadCommands": [
    "chmod +x {remotePath}",
    "ldd {remotePath}",
    "file {remotePath}"
  ],
  "usage": {
    "examples": [
      {
        "description": "Upload binary via SCP",
        "command": "scp cross-compile/onvif/out/onvifd root@192.168.1.100:/tmp/"
      },
      {
        "description": "Copy to SD card payload",
        "command": "cp cross-compile/onvif/out/onvifd SD_card_contents/anyka_hack/usr/bin/"
      }
    ]
  }
}
