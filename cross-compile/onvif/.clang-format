# clang-format configuration for ONVIF project
# Optimized for C99 embedded development with Anyka AK3918 platform
# Aligns with project coding standards and best practices
# Based on LLVM style with customizations for embedded C development

# Language and style
Language: Cpp
BasedOnStyle: LLVM

# Indentation and spacing (2-space indentation as per project standards)
IndentWidth: 2
TabWidth: 2
UseTab: Never
ContinuationIndentWidth: 2

# Line length and wrapping (100 chars for embedded readability)
ColumnLimit: 100
AlwaysBreakAfterReturnType: None
AlwaysBreakAfterDefinitionReturnType: None
AlwaysBreakBeforeMultilineStrings: false
BreakBeforeBinaryOperators: None
BreakBeforeTernaryOperators: true
BreakConstructorInitializersBeforeComma: false
BreakConstructorInitializers: BeforeColon
BreakStringLiterals: true

# Braces and brackets (Attach style for compact embedded code)
BreakBeforeBraces: Attach
BraceWrapping:
  AfterClass: false
  AfterControlStatement: false
  AfterEnum: false
  AfterFunction: false
  AfterNamespace: false
  AfterStruct: false
  AfterUnion: false
  BeforeCatch: false
  BeforeElse: false
  IndentBraces: false
  SplitEmptyFunction: true
  SplitEmptyRecord: true
  SplitEmptyNamespace: true

# Function and class formatting (strict for embedded safety)
AllowShortFunctionsOnASingleLine: Empty
AllowShortIfStatementsOnASingleLine: Never
AllowShortLoopsOnASingleLine: false
AllowShortCaseLabelsOnASingleLine: false
AllowShortBlocksOnASingleLine: Never
AllowShortEnumsOnASingleLine: true

# Alignment and spacing
AlignAfterOpenBracket: Align
AlignConsecutiveAssignments: false
AlignConsecutiveDeclarations: false
AlignConsecutiveMacros: Consecutive
AlignEscapedNewlines: Right
AlignOperands: true
AlignTrailingComments: true

# Pointer and reference alignment (Left for consistency with project)
PointerAlignment: Left
ReferenceAlignment: Left

# Spaces and padding
SpaceAfterCStyleCast: false
SpaceAfterLogicalNot: false
SpaceAfterTemplateKeyword: true
SpaceBeforeAssignmentOperators: true
SpaceBeforeCpp11BracedList: false
SpaceBeforeCtorInitializerColon: true
SpaceBeforeInheritanceColon: true
SpaceBeforeParens: ControlStatements
SpaceBeforeRangeBasedForLoopColon: true
SpaceInEmptyParentheses: false
SpacesBeforeTrailingComments: 1
SpacesInAngles: false
SpacesInCStyleCastParentheses: false
SpacesInContainerLiterals: true
SpacesInParentheses: false
SpacesInSquareBrackets: false

# Includes and sorting (Regroup for project structure)
IncludeBlocks: Regroup
SortIncludes: CaseSensitive
SortUsingDeclarations: true

# Include categories for proper separation
IncludeCategories:
  - Regex: '^<.*\.h>'
    Priority: 1
  - Regex: '^<.*>'
    Priority: 2
  - Regex: '^"include/.*"'
    Priority: 3
  - Regex: '^".*"'
    Priority: 4

# Comments
ReflowComments: true
CommentPragmas: '^ IWYU pragma:'

# Preprocessor
IndentPPDirectives: None
IncludeIsMainRegex: '(Test)?$'

# Namespace and class formatting
NamespaceIndentation: None
Cpp11BracedListStyle: true
FixNamespaceComments: true

# Penalties for breaking lines (optimized for embedded readability)
PenaltyBreakAssignment: 2
PenaltyBreakBeforeFirstCallParameter: 1
PenaltyBreakComment: 300
PenaltyBreakFirstLessLess: 120
PenaltyBreakString: 1000
PenaltyExcessCharacter: 1000000
PenaltyReturnTypeOnItsOwnLine: 200

# Additional C-specific settings
AllowAllParametersOfDeclarationOnNextLine: true
AlwaysBreakTemplateDeclarations: Yes
BinPackArguments: true
BinPackParameters: true
BreakBeforeInheritanceComma: false
CompactNamespaces: false
ConstructorInitializerAllOnOneLineOrOnePerLine: false
ConstructorInitializerIndentWidth: 4
DerivePointerAlignment: false
ExperimentalAutoDetectBinPacking: false
IndentCaseLabels: false
IndentWrappedFunctionNames: false
KeepEmptyLinesAtTheStartOfBlocks: true
MaxEmptyLinesToKeep: 1
Standard: Cpp11
