# =============================================================================
# ADVANCED CONFIGURATION
# =============================================================================

# Logging configuration
ONVIF_TEST_LOG_LEVEL=INFO
ONVIF_TEST_LOG_FILE=logs/integration_tests.log

# Report configuration
ONVIF_TEST_REPORT_FORMAT=html
ONVIF_TEST_REPORT_TITLE="ONVIF Integration Test Report"

# Network security settings
ONVIF_TEST_VERIFY_SSL=false
ONVIF_TEST_SSL_CERT_PATH=
ONVIF_TEST_SSL_KEY_PATH=

# Performance testing settings
ONVIF_TEST_BENCHMARK_MODE=false
ONVIF_TEST_STRESS_TEST_DURATION=300
ONVIF_TEST_CONCURRENT_STREAMS=5

# Video analysis settings
ONVIF_TEST_ANALYZE_VIDEO_QUALITY=false
ONVIF_TEST_VIDEO_ANALYSIS_FRAMES=100
ONVIF_TEST_VIDEO_QUALITY_THRESHOLD=0.8

# Debug settings
ONVIF_TEST_DEBUG_MODE=false
ONVIF_TEST_VERBOSE_OUTPUT=false
ONVIF_TEST_SAVE_DEBUG_FILES=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Test data paths
ONVIF_TEST_DATA_DIR=test_data
ONVIF_TEST_REPORTS_DIR=reports
ONVIF_TEST_LOGS_DIR=logs

# Mock settings for testing without real devices
ONVIF_TEST_USE_MOCK_DEVICES=false
ONVIF_TEST_MOCK_RESPONSE_DELAY=0.1

# CI/CD settings
ONVIF_TEST_CI_MODE=false
ONVIF_TEST_HEADLESS_MODE=false
ONVIF_TEST_AUTO_CLEANUP=true
