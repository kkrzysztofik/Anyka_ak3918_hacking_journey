# ONVIF Integration Tests Environment Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# TEST CONFIGURATION
# =============================================================================

# Number of test devices to configure
ONVIF_TEST_DEVICE_COUNT=2

# Network configuration
ONVIF_TEST_NETWORK_INTERFACE=auto
ONVIF_TEST_MULTICAST_ADDRESS=239.255.255.250

# Timeout settings (in seconds)
ONVIF_TEST_DISCOVERY_TIMEOUT=10
ONVIF_TEST_SERVICE_TIMEOUT=30
ONVIF_TEST_STREAM_TIMEOUT=60

# Test execution settings
ONVIF_TEST_MAX_CONCURRENT=3
ONVIF_TEST_RETRY_ATTEMPTS=3
ONVIF_TEST_RETRY_DELAY=1.0

# Feature flags
ONVIF_TEST_VIDEO_ANALYSIS=false
ONVIF_TEST_PERFORMANCE=false

# =============================================================================
# DEVICE CONFIGURATION
# =============================================================================

# Device 1 Configuration
ONVIF_TEST_DEVICE_0_NAME=camera1
ONVIF_TEST_DEVICE_0_IP=192.168.1.100
ONVIF_TEST_DEVICE_0_PORT=8080
ONVIF_TEST_DEVICE_0_RTSP_PORT=554
ONVIF_TEST_DEVICE_0_WS_DISCOVERY_PORT=3702
ONVIF_TEST_DEVICE_0_USERNAME=admin
ONVIF_TEST_DEVICE_0_PASSWORD=admin
ONVIF_TEST_DEVICE_0_DEVICE_TYPE=camera
ONVIF_TEST_DEVICE_0_EXPECTED_MANUFACTURER=Anyka
ONVIF_TEST_DEVICE_0_EXPECTED_MODEL=AK3918 Camera
ONVIF_TEST_DEVICE_0_ENABLE_AUTH=false
ONVIF_TEST_DEVICE_0_TIMEOUT=30

# Device 2 Configuration
ONVIF_TEST_DEVICE_1_NAME=camera2
ONVIF_TEST_DEVICE_1_IP=192.168.1.101
ONVIF_TEST_DEVICE_1_PORT=8080
ONVIF_TEST_DEVICE_1_RTSP_PORT=554
ONVIF_TEST_DEVICE_1_WS_DISCOVERY_PORT=3702
ONVIF_TEST_DEVICE_1_USERNAME=admin
ONVIF_TEST_DEVICE_1_PASSWORD=admin
ONVIF_TEST_DEVICE_1_DEVICE_TYPE=camera
ONVIF_TEST_DEVICE_1_EXPECTED_MANUFACTURER=Anyka
ONVIF_TEST_DEVICE_1_EXPECTED_MODEL=AK3918 Camera
ONVIF_TEST_DEVICE_1_ENABLE_AUTH=false
ONVIF_TEST_DEVICE_1_TIMEOUT=30

